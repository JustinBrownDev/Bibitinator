<Window x:Class="Bibitinator.NodeEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibitinator"
        xmlns:nodenetwork="clr-namespace:NodeNetwork.Views;assembly=NodeNetwork"
        mc:Ignorable="d"
        Title="Brain Editor" Height="450" Width="800" >
    <Grid>
        <nodenetwork:NetworkView x:Name="networkView" Grid.ColumnSpan="2" FontSize="36" />
        <Button x:Name="ArrangeButton" Content="Arrange" Click="ArrangeButton_Click" HorizontalAlignment="Right" Width="50" VerticalAlignment="Top" Grid.Column="1"/>
    </Grid>
</Window>
